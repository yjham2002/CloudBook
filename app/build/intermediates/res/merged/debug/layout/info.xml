<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="@dimen/actionbar_dimen_w"
            android:layout_height="@dimen/actionbar_dimen"
            android:text=""
            android:id="@+id/button8"
            android:textColor="#FFFFFF"
            android:background="@drawable/drawer_selector"
            android:gravity="center"
            android:padding="20dp"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="앱 정보"
            android:id="@+id/titleText"
            android:layout_gravity="center"
            android:textColor="@color/white" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/login_logo2"
                android:cropToPadding="false"
                android:padding="10dp"
                android:scaleType="centerInside" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail"
                android:id="@+id/textView6"
                android:padding="20dp"
                android:textColor="#555555"
                android:background="@drawable/layout_group"
                android:layout_margin="7dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/C:/Users/ATIV/StudioProjects/CloudBook/app/src/main/res/layout/info.xml -->